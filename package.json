{
    "name": "playwright-study",
    "version": "1.0.0",
    "description": "Multipurpose Playwright study repository",
    "main": ".eslintrc.js",
    "directories": {
        "test": "test"
    },
    "devDependencies": {
        "@playwright/test": "^1.16.0"
    },
    "scripts": {
        "beforetest": "cd webapp && npm install",
        "beforetest:ci": "cd webapp && npm ci",
        "test": "PWTEST_SKIP_TEST_OUTPUT=1 npx playwright test --grep-invert '@visual' --project 'chromium-hd' || :",
        "test:match": "PWTEST_SKIP_TEST_OUTPUT=1 npx playwright test --grep-invert '@visual' --grep $MATCH --project 'chromium-hd' || :",
        "test:visual": "PWTEST_SKIP_TEST_OUTPUT=1 npx playwright test --grep @visual --project 'chromium-hd' || :",
        "test:e2e": "PWTEST_SKIP_TEST_OUTPUT=1 npx playwright test --grep @e2e --project 'chromium-hd' || :",
        "test:smoke": "PWTEST_SKIP_TEST_OUTPUT=1 npx playwright test --grep @smoke --project 'chromium-hd' || :",
        "test:ci": "PWTEST_SKIP_TEST_OUTPUT=1 npx playwright test --grep-invert '@visual' || :",
        "test:docker": "PWTEST_SKIP_TEST_OUTPUT=1 PLAYWRIGHT_HTML_REPORT='test-results' npx playwright test --grep-invert '@visual' --reporter=dot,html ||:"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ltsuda/playwright-study.git"
    },
    "keywords": [],
    "author": "Leonardo Tsuda",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/ltsuda/playwright-study/issues"
    },
    "homepage": "https://github.com/ltsuda/playwright-study#readme"
}
